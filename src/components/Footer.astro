---
import { Icon } from "astro-icon"
import navData from "../data/navData"
import { siteParams } from "../data/siteData"
import { Link } from "./utilities"

const piscines = navData[0]
const { name, email, phone, location, horaire, plan } = siteParams
---

<footer class="bg-whiter">
	<div class="mx-auto max-w-1390 px-4 md:px-8 2xl:px-0">
		<!-- Footer Top -->
		<div class="py-20 lg:py-25">
			<div class="flex flex-wrap gap-8 lg:justify-between lg:gap-0">
				<div class="animate_top w-1/2 lg:w-1/4">
					<a href="index.html">
						<Icon name="logo-mobile" width="220" />
					</a>

					<p class="mb-10 mt-5">
						Vente et installation de piscines coques depuis plus de 25 ans. Du
						Bassin d'Arcachon jusqu'au Medoc et dans l'ensemble de la cote
						ouest.
					</p>

					<ul class="flex items-center gap-5">
						<li>
							<a
								href="#"
								class="group flex h-10 w-10 items-center justify-center rounded-full transition-all duration-300 hover:bg-primary">
								<Icon
									name="ph:facebook-logo-light"
									width="32"
									class="fill-body transition-all duration-300 group-hover:text-white"
								/>
							</a>
						</li>
						<li>
							<a
								href="#"
								class="group flex h-10 w-10 items-center justify-center rounded-full transition-all duration-300 hover:bg-primary">
								<Icon
									name="ph:instagram-logo-light"
									width="32"
									class="fill-body transition-all duration-300 group-hover:text-white"
								/>
							</a>
						</li>
						<li>
							<a
								href="#"
								class="group flex h-10 w-10 items-center justify-center rounded-full transition-all duration-300 hover:bg-primary">
								<Icon
									name="ph:youtube-logo-light"
									width="32"
									class="fill-body transition-all duration-300 group-hover:text-white"
								/>
							</a>
						</li>
					</ul>
				</div>

				<div
					class="flex w-full flex-col gap-8 md:flex-row md:justify-between md:gap-0 lg:w-[70%]">
					<div class="animate_top">
						<h4 class="mb-9 text-2xl text-secondary">Nos Piscines Coques</h4>

						<ul>
							{
								piscines.dropdownLinks.map(poolLink => (
									<li>
										<Link
											href={poolLink.path}
											text={poolLink.name}
											classes={"mb-3 inline-block hover:text-primary"}
										/>
									</li>
								))
							}
						</ul>
					</div>

					<div class="animate_top">
						<h4 class="mb-9 text-2xl text-secondary">Où nous trouver</h4>

						<div class="mb-10">
							<h5
								class="mb-1.5 flex items-center gap-2 text-title-xsm text-blacksection">
								<Icon name="ph:map-pin-line-light" width="32" />
								{name}
							</h5>
							<p>
								{location.adresse}
							</p>
							<p class="mb-3">
								{location.city}
							</p>
							<p class="mb-2">
								lun-Vend: 09h à 12h / 14h à 18h <br /> & sam: 9h à 12h
							</p>
							<Link
								href={plan}
								text="Plan d'accès"
								target="_blank"
								icon={{ name: "ph:caret-right-light", side: "right" }}
							/>
						</div>
					</div>

					<div class="animate_top flex flex-col">
						<h4 class="mb-9 text-2xl text-secondary">Nous Joindre</h4>
						<div class="group">
							<Link
								href="/contact"
								text={"Demande de Devis"}
								borderVisible={true}
								classes={"w-2/3 md:w-[90%] mb-3 justify-center"}
								icon={{
									name: "ph:caret-right-light",
									side: "right",
									classeSvg:
										"duration-200 transition-all group-hover:translate-x-0.5",
								}}
							/>
						</div>
						<Link
							href={"tel:0556926206"}
							text={phone}
							classes={"mb-3"}
							icon={{ name: "ph:phone-disconnect-light", side: "left" }}
						/>
						<Link
							href={`mailto:${email}`}
							text={email}
							icon={{ name: "ph:envelope-thin", side: "left" }}
						/>
					</div>
				</div>
			</div>
		</div>
		<!-- Footer Top -->

		<!-- Footer Bottom -->
		<div
			class="flex flex-col flex-wrap items-center justify-center gap-5 border-t border-strokedark py-7.5 dark:border-stroke lg:flex-row lg:justify-between lg:gap-0">
			<div class="animate_top">
				<ul class="flex items-center gap-8">
					<li><a href="#" class="hover:text-primary">Mentions Légales</a></li>
					<li><a href="#" class="hover:text-primary">Vie privée</a></li>
					<li><a href="#" class="hover:text-primary">Infos cookies</a></li>
				</ul>
			</div>

			<div class="animate_top">
				<p>&copy; 2023 Douceur Piscine. Tous droits réservés</p>
			</div>
		</div>
		<!-- Footer Bottom -->
	</div>
</footer>
